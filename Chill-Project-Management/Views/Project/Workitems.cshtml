    <!-- Kanban Board JavaScript -->
    <script>
        // View Toggle
        const listViewBtn = document.getElementById('listViewBtn');
        const boardViewBtn = document.getElementById('boardViewBtn');
        const listView = document.getElementById('listView');
        const boardView = document.getElementById('boardView');

        listViewBtn.addEventListener('click', () => {
            listView.style.display = 'flex';
            boardView.style.display = 'none';
            listViewBtn.classList.add('active');
            boardViewBtn.classList.remove('active');
        });

        boardViewBtn.addEventListener('click', () => {
            listView.style.display = 'none';
            boardView.style.display = 'flex';
            boardViewBtn.classList.add('active');
            listViewBtn.classList.remove('active');
            populateKanbanBoard();
        });

        // Populate Kanban Board
        function populateKanbanBoard() {
            const tasks = document.querySelectorAll('#listView .task-item');
            const todoColumn = document.getElementById('todoColumn');
            const inprogressColumn = document.getElementById('inprogressColumn');
            const completedColumn = document.getElementById('completedColumn');

            // Clear columns
            todoColumn.innerHTML = '';
            inprogressColumn.innerHTML = '';
            completedColumn.innerHTML = '';

            tasks.forEach(task => {
                const status = task.getAttribute('data-status');
                const kanbanCard = createKanbanCard(task);

                if (status === 'todo') {
                    todoColumn.appendChild(kanbanCard);
                } else if (status === 'inprogress') {
                    inprogressColumn.appendChild(kanbanCard);
                } else if (status === 'completed') {
                    completedColumn.appendChild(kanbanCard);
                }
            });

            // Update task counts
            updateTaskCounts();
        }

        // Create Kanban Card from Task Item
        function createKanbanCard(taskItem) {
            const card = document.createElement('div');
            card.className = 'kanban-card';
            card.draggable = true;
            card.setAttribute('data-task-id', taskItem.getAttribute('data-task-id'));

            const title = taskItem.querySelector('.task-title').textContent;
            const description = taskItem.querySelector('.task-description').textContent;
            const priority = taskItem.querySelector('.badge:first-of-type').textContent;
            const priorityClass = taskItem.querySelector('.badge:first-of-type').className;
            const assignee = taskItem.querySelector('.task-assignee') ? 
                taskItem.querySelector('.task-assignee').textContent.trim() : 'Unassigned';
            const date = taskItem.querySelector('.task-date') ? 
                taskItem.querySelector('.task-date').textContent.trim() : '';

            card.innerHTML = `
                <div class="kanban-card-header">
                    <span class="badge ${priorityClass}">${priority}</span>
                </div>
                <h6 class="kanban-card-title">${title}</h6>
                <p class="kanban-card-description">${description}</p>
                <div class="kanban-card-footer">
                    <small class="text-muted">${assignee}</small>
                    ${date ? `<small class="text-muted">${date}</small>` : ''}
                </div>
            `;

            // Drag events
            card.addEventListener('dragstart', handleDragStart);
            card.addEventListener('dragend', handleDragEnd);

            return card;
        }

        // Drag and Drop Handlers
        let draggedElement = null;

        function handleDragStart(e) {
            draggedElement = this;
            this.style.opacity = '0.5';
            e.dataTransfer.effectAllowed = 'move';
            e.dataTransfer.setData('text/html', this.innerHTML);
        }

        function handleDragEnd(e) {
            this.style.opacity = '1';
        }

        function handleDragOver(e) {
            if (e.preventDefault) {
                e.preventDefault();
            }
            e.dataTransfer.dropEffect = 'move';
            return false;
        }

        function handleDragEnter(e) {
            this.classList.add('drag-over');
        }

        function handleDragLeave(e) {
            this.classList.remove('drag-over');
        }

        function handleDrop(e) {
            if (e.stopPropagation) {
                e.stopPropagation();
            }

            this.classList.remove('drag-over');

            if (draggedElement !== this) {
                const newStatus = this.closest('.kanban-column').getAttribute('data-status');
                const taskId = draggedElement.getAttribute('data-task-id');

                // Move card in board view
                this.appendChild(draggedElement);

                // Update task status in list view
                const listTask = document.querySelector(`#listView .task-item[data-task-id="${taskId}"]`);
                if (listTask) {
                    listTask.setAttribute('data-status', newStatus);
                    
                    // Update status badge
                    const statusBadge = listTask.querySelector('.badge:nth-of-type(2)');
                    if (statusBadge) {
                        if (newStatus === 'todo') {
                            statusBadge.className = 'badge bg-primary';
                            statusBadge.textContent = 'To Do';
                        } else if (newStatus === 'inprogress') {
                            statusBadge.className = 'badge bg-warning text-dark';
                            statusBadge.textContent = 'In Progress';
                        } else if (newStatus === 'completed') {
                            statusBadge.className = 'badge bg-success';
                            statusBadge.textContent = 'Completed';
                            listTask.classList.add('completed');
                        } else {
                            listTask.classList.remove('completed');
                        }
                    }
                }

                // Update task counts
                updateTaskCounts();

                // Here you would typically make an AJAX call to update the database
                console.log(`Task ${taskId} moved to ${newStatus}`);
            }

            return false;
        }

        // Update task counts in column headers
        function updateTaskCounts() {
            document.querySelectorAll('.kanban-column').forEach(column => {
                const count = column.querySelector('.column-content').children.length;
                column.querySelector('.task-count').textContent = count;
            });
        }

        // Setup drop zones
        function setupDropZones() {
            const columns = document.querySelectorAll('.column-content');
            columns.forEach(column => {
                column.addEventListener('dragover', handleDragOver);
                column.addEventListener('dragenter', handleDragEnter);
                column.addEventListener('dragleave', handleDragLeave);
                column.addEventListener('drop', handleDrop);
            });
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            setupDropZones();
        });
    </script>
