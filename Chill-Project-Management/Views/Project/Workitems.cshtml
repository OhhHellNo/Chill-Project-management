    <style>
        /* ----------------------------------
           Global Layout
        ---------------------------------- */
        .dashboard-content {
            padding: 30px;
            background: #f5f6fa;
            min-height: 100vh;
        }

        /* ----------------------------------
           Page Header
        ---------------------------------- */
        .page-header .page-title {
            font-size: 28px;
            font-weight: 700;
        }

        .page-header p {
            margin: 0;
            color: #6c757d;
        }

        /* ----------------------------------
           Filters Section
        ---------------------------------- */
        .filters-section {
            padding: 15px 20px;
            border-radius: 12px;
            background: #ffffff;
            box-shadow: 0px 2px 6px rgba(0,0,0,0.05);
        }

            /* Filters inputs */
            .filters-section .form-control,
            .filters-section .form-select {
                border-radius: 10px;
                padding: 10px;
                font-size: 15px;
            }

        /* View Toggle Buttons */
        .btn-outline-secondary {
            border-radius: 10px;
        }

            .btn-outline-secondary.active {
                background: #0d6efd;
                color: #fff;
            }

        /* ----------------------------------
           Work Items List View
        ---------------------------------- */
        .workitems-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        /* Each Task Item */
        .task-item {
            display: flex;
            align-items: flex-start;
            background: #ffffff;
            padding: 18px 20px;
            border-radius: 12px;
            gap: 15px;
            transition: 0.25s;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.05);
            border-left: 5px solid transparent;
        }

            .task-item:hover {
                transform: scale(1.01);
                box-shadow: 0px 3px 9px rgba(0,0,0,0.08);
            }

            /* Completed Style */
            .task-item.completed {
                opacity: 0.7;
                border-left-color: #28a745 !important;
            }

        /* Checkbox */
        .task-checkbox input {
            transform: scale(1.3);
            cursor: pointer;
        }

        /* Task Details */
        .task-details .task-title {
            font-size: 18px;
            font-weight: 600;
        }

        .task-description {
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 10px;
        }

        /* Small Badges */
        .task-meta .badge {
            margin-right: 6px;
            font-size: 12px;
            padding: 6px 10px;
            border-radius: 8px;
        }

        /* Assignee + Date */
        .task-assignee, .task-date {
            font-size: 13px;
            color: #555;
            margin-right: 10px;
        }

            .task-assignee i,
            .task-date i {
                margin-right: 4px;
            }

        /* Task actions */
        .task-actions .btn {
            border-radius: 10px;
            margin-left: 5px;
        }

        /* ----------------------------------
           Kanban Board
        ---------------------------------- */
        .kanban-board {
            display: flex;
            gap: 20px;
        }

        .kanban-column {
            background: #ffffff;
            border-radius: 12px;
            padding: 18px;
            width: 32%;
            box-shadow: 0px 2px 6px rgba(0,0,0,0.05);
        }

        .column-header {
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
        }

        .column-title {
            font-size: 18px;
            font-weight: 600;
        }

        .task-count {
            background: #eee;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 12px;
        }

        /* Kanban Card */
        .kanban-card {
            background: #ffffff;
            padding: 15px;
            border-radius: 12px;
            margin-bottom: 15px;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.06);
            cursor: grab;
            transition: 0.2s;
        }

            .kanban-card:hover {
                transform: translateY(-3px);
            }

        .kanban-card-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .kanban-card-description {
            font-size: 14px;
            color: #666;
            margin-bottom: 8px;
        }
    </style>
