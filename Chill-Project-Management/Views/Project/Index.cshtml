<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Dashboard - Project Management</title>

    <!-- Bootstrap CSS -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> -->

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/project-index.css">
</head>

<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-kanban text-primary"></i> ProjectHub
            </a>
            <div class="d-flex align-items-center gap-3">
                <!-- Add Member Button -->
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                    data-bs-target="#addMemberModal">
                    <i class="bi bi-person-plus me-2"></i>Add Member
                </button>

                <!-- Create New Project Button -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#createProjectModal">
                    <i class="bi bi-plus-lg me-2"></i>New Project
                </button>

                <!-- User Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-link text-decoration-none dropdown-toggle p-0" type="button"
                        id="userDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle fs-3 text-primary"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout"><i
                                    class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="main-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h5 class="project-name">My Awesome Project</h5>
                <small class="text-muted">Software Development</small>
            </div>

            <nav class="sidebar-nav">
                <a asp-controller="Project" asp-action="Index" class="nav-item active">
                    <i class="bi bi-grid"></i>
                    <span>Overview</span>
                </a>
                <a asp-controller="Project" asp-action="WorkItems" class="nav-item">
                    <i class="bi bi-list-task"></i>
                    <span>Work Items</span>
                </a>
              
                <a href="#" class="nav-item">
                    <i class="bi bi-people"></i>
                    <span>Team</span>
                </a>
                
                <a href="#" class="nav-item">
                    <i class="bi bi-chat-dots"></i>
                    <span>Discussions</span>
                </a>
                
            </nav>

            <div class="sidebar-footer">
                <a href="#" class="nav-item">
                    <i class="bi bi-gear"></i>
                    <span>Project Settings</span>
                </a>
            </div>
        </aside>

        <!-- Dashboard Content -->
        <main class="dashboard-content">
            <!-- Page Header -->
            <div class="page-header">
                <div>
                    <h2 class="page-title">Project Overview</h2>
                    <p class="text-muted">Monitor your project progress and key metrics</p>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="row g-3 mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-icon bg-primary">
                            <i class="bi bi-list-check"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">24</h3>
                            <p class="stat-label">Total Tasks</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-icon bg-success">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">18</h3>
                            <p class="stat-label">Completed</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-icon bg-warning">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">4</h3>
                            <p class="stat-label">In Progress</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="stat-card">
                        <div class="stat-icon bg-danger">
                            <i class="bi bi-exclamation-circle"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-value">2</h3>
                            <p class="stat-label">Overdue</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts and Recent Activity -->
            <div class="row g-4">
                <!-- Progress Chart -->
                <div class="col-lg-8">
                    <div class="dashboard-card">
                        <div class="card-header-custom">
                            <h5 class="card-title-custom">Project Progress</h5>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light dropdown-toggle" type="button"
                                    data-bs-toggle="dropdown">
                                    Last 7 Days
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Last 7 Days</a></li>
                                    <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                                    <li><a class="dropdown-item" href="#">Last 90 Days</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body-custom">
                            <div class="progress-overview">
                                <div class="progress-item">
                                    <span class="progress-label">Overall Completion</span>
                                    <span class="progress-percent">75%</span>
                                </div>
                                <div class="progress mb-4" style="height: 10px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
                                </div>

                                <div class="chart-placeholder">
                                    <i class="bi bi-bar-chart-line"></i>
                                    <p>Task completion trend chart will appear here</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Team Members -->
                <div class="col-lg-4">
                    <div class="dashboard-card">
                        <div class="card-header-custom">
                            <h5 class="card-title-custom">Team Members</h5>
                            <span class="badge bg-primary">8 Members</span>
                        </div>
                        <div class="card-body-custom">
                            <div class="team-list">
                                <div class="team-member">
                                    <div class="member-avatar bg-primary">JD</div>
                                    <div class="member-info">
                                        <h6 class="member-name">John Doe</h6>
                                        <small class="text-muted">Project Lead</small>
                                    </div>
                                </div>
                                <div class="team-member">
                                    <div class="member-avatar bg-success">AS</div>
                                    <div class="member-info">
                                        <h6 class="member-name">Alice Smith</h6>
                                        <small class="text-muted">Developer</small>
                                    </div>
                                </div>
                                <div class="team-member">
                                    <div class="member-avatar bg-warning">BJ</div>
                                    <div class="member-info">
                                        <h6 class="member-name">Bob Johnson</h6>
                                        <small class="text-muted">Designer</small>
                                    </div>
                                </div>
                                <div class="team-member">
                                    <div class="member-avatar bg-info">CD</div>
                                    <div class="member-info">
                                        <h6 class="member-name">Carol Davis</h6>
                                        <small class="text-muted">QA Tester</small>
                                    </div>
                                </div>
                                <a href="#" class="view-all-link">View all members <i class="bi bi-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="row g-4 mt-1">
                <div class="col-12">
                    <div class="dashboard-card">
                        <div class="card-header-custom">
                            <h5 class="card-title-custom">Recent Activities</h5>
                            <a href="#" class="text-decoration-none">View All</a>
                        </div>
                        <div class="card-body-custom">
                            <div class="activity-list">
                                <div class="activity-item">
                                    <div class="activity-icon bg-success">
                                        <i class="bi bi-check-lg"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="activity-text"><strong>John Doe</strong> completed task "Design
                                            Homepage"</p>
                                        <small class="text-muted">2 hours ago</small>
                                    </div>
                                </div>
                                <div class="activity-item">
                                    <div class="activity-icon bg-primary">
                                        <i class="bi bi-plus-lg"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="activity-text"><strong>Alice Smith</strong> added a new task "API
                                            Integration"</p>
                                        <small class="text-muted">5 hours ago</small>
                                    </div>
                                </div>
                                <div class="activity-item">
                                    <div class="activity-icon bg-info">
                                        <i class="bi bi-chat"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="activity-text"><strong>Bob Johnson</strong> commented on "User
                                            Dashboard Design"</p>
                                        <small class="text-muted">1 day ago</small>
                                    </div>
                                </div>
                                <div class="activity-item">
                                    <div class="activity-icon bg-warning">
                                        <i class="bi bi-person-plus"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="activity-text"><strong>Carol Davis</strong> joined the project</p>
                                        <small class="text-muted">2 days ago</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Add Member Modal -->
    <div class="modal fade" id="addMemberModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-person-plus me-2"></i>Add Team Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Project" asp-action="AddMember" method="post">
                        <div class="mb-3">
                            <label for="memberEmail" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="memberEmail" name="memberEmail"
                                placeholder="Enter member's email" required>
                        </div>
                        <div class="mb-3">
                            <label for="memberRole" class="form-label">Role</label>
                            <select class="form-select" id="memberRole" name="memberRole" required>
                                <option value="">Select role...</option>
                                <option value="admin">Admin</option>
                                <option value="developer">Developer</option>
                                <option value="designer">Designer</option>
                                <option value="tester">Tester</option>
                                <option value="viewer">Viewer</option>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Send Invitation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Project Modal -->
    <div class="modal fade" id="createProjectModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-folder-plus me-2"></i>Create New Project</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Project" asp-action="Create" method="post">
                        <div class="mb-3">
                            <label for="projectName" class="form-label">Project Name</label>
                            <input type="text" class="form-control" id="projectName" name="projectName"
                                placeholder="Enter project name" required>
                        </div>
                        <div class="mb-3">
                            <label for="projectDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="projectDescription" name="projectDescription" rows="3"
                                placeholder="Describe your project..."></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="projectType" class="form-label">Project Type</label>
                            <select class="form-select" id="projectType" name="projectType" required>
                                <option value="">Select type...</option>
                                <option value="software">Software Development</option>
                                <option value="marketing">Marketing Campaign</option>
                                <option value="design">Design Project</option>
                                <option value="research">Research</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Create Project
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script> -->
</body>

</html>