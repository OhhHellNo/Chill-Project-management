<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Card</title>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #e5e5e5;
            padding: 40px;
            font-family: Arial, Helvetica, sans-serif;
        }

        .card {
            width: 400px;
            background: white;
            border-radius: 14px;
            position: relative;
            padding: 20px;
            color: #333;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 22px rgba(0, 0, 0, 0.22);
        }

        .options-icon i {
            transition: color 0.25s ease, transform 0.25s ease;
        }

        .options-icon:hover i {
            color: #555;
            transform: rotate(90deg);
        }

        .title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 18px;
        }

        .info-row {
            display: flex;
            gap: 18px;
            align-items: center;
            font-size: 14px;
            font-weight: 500;
            color: #555;
        }

        select {
            padding: 6px 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.25s ease;
            appearance: none;
            /* removes default arrow on some browsers */
        }

        select:hover {
            border-color: #888;
        }

        select:focus {
            outline: none;
            border-color: #666;
            box-shadow: 0 0 4px rgba(0, 0, 0, 0.15);
        }

        /* STATE colors */
        .todo {
            background-color: #d8e8ff;
            color: #0055cc;
        }

        .inprogress {
            background-color: #ffe8c2;
            color: #d47300;
        }

        .completed {
            background-color: #d4f5d4;
            color: #0f8a1c;
        }

        .cancelled {
            background-color: #ffd6d6;
            color: #cc1b1b;
        }

        /* PRIORITY colors */
        .urgent {
            background-color: #ffd6d6;
            color: #cc1b1b;
        }

        .high {
            background-color: #ffe0b3;
            color: #d47300;
        }

        .medium {
            background-color: #fff2b3;
            color: #d4a000;
        }

        .low {
            background-color: #d4f5d4;
            color: #0f8a1c;
        }

        .none {
            background-color: #f0f0f0;
            color: #777;
        }

        .assigned-container {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Circular avatar for assigned user */
        .avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: #4a6cff;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: 600;
            font-size: 14px;
            text-transform: uppercase;
        }

        /* Hide by default */
        .options-icon {
            opacity: 0;
            transition: opacity 0.25s ease;
        }

        /* Show on card hover */
        .card:hover .options-icon {
            opacity: 1;
        }

        /* HIDDEN BACKDROP */
        .modal-backdrop {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.55);
            justify-content: center;
            align-items: center;
            z-index: 999;
        }

        /* POPUP BOX */
        .modal-box {
            background: red;
            width: 420px;
            padding: 24px;
            border-radius: 12px;
            animation: modalPop .25s ease;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
        }


        /* CLOSE BUTTON */
        .modal-close-btn {
            margin-top: 20px;
            background: #4a6cff;
            color: white;
            padding: 8px 14px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
        }

        /* Optional: add small icon in select text using ::before with content is tricky, handled via JS below */
    </style>
</head>

<body>

    <div class="card">
        <!-- Options Icon -->
        <span class="options-icon" style="position: absolute; top: 12px; right: 14px; font-size: 20px;">
            <i class="bi bi-three-dots"></i>
        </span>

        <!-- Title -->
        <div class="title">Top Text</div>

        <!-- Info row -->
        <div class="info-row">

            <!-- STATE dropdown -->
            <select id="stateDropdown">
                <option value="todo">To-do</option>
                <option value="inprogress">In-progress</option>
                <option value="completed">Completed</option>
                <option value="cancelled">Cancelled</option>
            </select>

            <!-- PRIORITY dropdown -->
            <select id="priorityDropdown">
                <option value="urgent">&#x26D4; Urgent</option>
                <option value="high">&#x25B2; High</option>
                <option value="medium">&#x25CF; Medium</option>
                <option value="low">&#x25CF; Low</option>
                <option value="none">&#x26AA; None</option>
            </select>

            <!-- DATE PICKER (hidden) -->
            <input type="date" id="dueDateInput" style="display:none;">

            <!-- Calendar icon + date text -->
            <span id="calendarIcon" style="cursor:pointer; font-size:18px;">
                <i class="bi bi-calendar2-day"></i>
            </span>

            <span id="dueDateText">No due date</span>

            <!-- ASSIGNED SECTION -->
            <div class="assigned-container">
                <span id="assignedNone">
                    None <i class="bi bi-plus-circle" id="assignAddIcon" style="cursor:pointer;"></i>
                </span>
                <!-- HIDDEN USER SELECT -->
                <select id="userSelect" style="display:none;">
                    <option value="">None</option>
                    <option value="Alice Johnson">Alice Johnson</option>
                    <option value="Brian Lee">Brian Lee</option>
                    <option value="Cynthia Adams">Cynthia Adams</option>
                    <option value="David Parker">David Parker</option>
                </select>


                <!-- Circle avatar (hidden until assigned) -->
                <div id="assignedAvatar" class="avatar" style="display:none;"></div>
            </div>
        </div>

    </div>
    <!-- MODAL -->
    <div id="optionsModal" class="modal-backdrop">
        <div class="modal-box">
            <div id="modal-header">
                Edit <i class="bi bi-pencil-square"></i>
                Delete <i class="bi bi-trash"></i>


            </div>
            <div class="dataitems">
                populated header and description


                populated icons selected

            </div>
            <div id="modal-footer">
                <button>Update</button>
                <button>Discard</button>

            </div>

            <div>


            </div>
        </div>


        <script>
            // Open modal on clicking the 3-dot icon
            document.querySelector(".options-icon").addEventListener("click", () => {
                document.getElementById("optionsModal").style.display = "flex";
            });

            // Close modal
            document.getElementById("closeModalBtn").addEventListener("click", () => {
                document.getElementById("optionsModal").style.display = "none";
            });

            // Optional: close modal on backdrop click
            document.getElementById("optionsModal").addEventListener("click", (e) => {
                if (e.target === e.currentTarget) {
                    e.currentTarget.style.display = "none";
                }
            });

            // STATE dropdown colors
            const stateDropdown = document.getElementById("stateDropdown");
            const stateColors = {
                todo: { bg: '#d8e8ff', color: '#0055cc' },
                inprogress: { bg: '#ffe8c2', color: '#d47300' },
                completed: { bg: '#d4f5d4', color: '#0f8a1c' },
                cancelled: { bg: '#ffd6d6', color: '#cc1b1b' }
            };

            function updateStateColor() {
                const value = stateDropdown.value;
                stateDropdown.style.backgroundColor = stateColors[value].bg;
                stateDropdown.style.color = stateColors[value].color;
            }

            stateDropdown.addEventListener('change', updateStateColor);
            window.addEventListener('load', updateStateColor);

            // PRIORITY dropdown colors + icons
            const priorityDropdown = document.getElementById("priorityDropdown");
            const priorityColors = {
                urgent: { bg: '#ffd6d6', color: '#cc1b1b' },
                high: { bg: '#ffe0b3', color: '#d47300' },
                medium: { bg: '#fff2b3', color: '#d4a000' },
                low: { bg: '#d4f5d4', color: '#0f8a1c' },
                none: { bg: '#f0f0f0', color: '#777' }
            };

            function updatePriorityColor() {
                const value = priorityDropdown.value;
                priorityDropdown.style.backgroundColor = priorityColors[value].bg;
                priorityDropdown.style.color = priorityColors[value].color;
            }

            priorityDropdown.addEventListener('change', updatePriorityColor);
            window.addEventListener('load', updatePriorityColor);
            const dueDateInput = document.getElementById("dueDateInput");
            const calendarIcon = document.getElementById("calendarIcon");
            const dueDateText = document.getElementById("dueDateText");

            // Clicking the icon triggers hidden date input
            calendarIcon.addEventListener("click", () => {
                dueDateInput.showPicker ? dueDateInput.showPicker() : dueDateInput.click();
            });

            // When date is selected
            dueDateInput.addEventListener("change", () => {
                if (dueDateInput.value) {
                    const date = new Date(dueDateInput.value);
                    const formatted = date.toLocaleDateString(undefined, {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                    });
                    dueDateText.textContent = formatted;
                }
            });
            // ASSIGNEE LOGIC
            const assignedNone = document.getElementById("assignedNone");
            const assignedAvatar = document.getElementById("assignedAvatar");
            const assignAddIcon = document.getElementById("assignAddIcon");
            const userSelect = document.getElementById("userSelect");

            // Show user picker when clicking +
            assignAddIcon.addEventListener("click", () => {
                userSelect.style.display = "inline-block";
                userSelect.focus();
            });

            // When user picked
            userSelect.addEventListener("change", () => {
                const selectedName = userSelect.value;

                if (selectedName === "") {
                    // Show None again
                    assignedNone.style.display = "inline";
                    assignedAvatar.style.display = "none";
                    userSelect.style.display = "none";
                    return;
                }

                // Set avatar letter
                const firstLetter = selectedName.charAt(0).toUpperCase();
                assignedAvatar.textContent = firstLetter;

                assignedNone.style.display = "none";
                assignedAvatar.style.display = "flex";

                // Hide dropdown again
                userSelect.style.display = "none";
            });

        </script>

</body>

</html>